<script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
<script>
   
   document.querySelectorAll('.whishList').forEach(function(whishBtn){
       whishBtn.addEventListener('click',function(event){
           event.preventDefault()
           console.log(this.dataset.productid);
           addToWhisList(this.dataset.productid)
       })
   })

   const addToWhisList = async(productId)=>{
    //    console.log("heloooo");
       console.log(productId);
       try{

           const res= await axios({
               method:'post',
               url:'/add-to-whishlist',
               data:{productId}
           })
       console.log(res);
       if(res.data.status==='removed'){
            // document.getElementById(productId).style.backgroundColor='white'  
            localStorage.setItem(productId,'white')
           Toastify({
                   text: "product removed from whishList",
                   duration: 3000,
                   // close: true,
                   gravity: "top", // `top` or `bottom`
                   position: "right", // `left`, `center` or `right`
                   stopOnFocus: true, // Prevents dismissing of toast on hover
                   style: {
                       background: "red",
                   },
               }).showToast()
               location.reload()
       }

       }catch(err){
           console.log(err);
       }

   }
</script>


<script type="text/javascript">
    document.querySelectorAll('.addTocart').forEach(function(button){
