<script type="text/javascript" src="https://www.elevateweb.co.uk/wp-content/themes/radial/jquery.elevatezoom.min.js"></script>
<script type="text/javascript">

    $("#zoom_05").elevateZoom({
       
        zoomType: 'inner',
        cursor: 'crosshair',
        easing : true,
    });
    
</script>