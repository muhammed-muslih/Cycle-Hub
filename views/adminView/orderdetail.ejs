                <div class="row">
                  <div class="col-xl-4">
                    <ul class="list-unstyled">
                      <li class="text-muted">Customer: <span style="color:white ;"><%=locals.orders[0].userDetails.firstName%> <%=locals.orders[0].userDetails.lastName%></span></li>
                      <li class="text-muted">Customer ID:<span style="color:white ;"><%=locals.orders[0].userDetails._id%></span> </li>
                      <!-- <li class="text-muted" style="color:black ;"></li> -->
                      <li class="text-muted"><i class="fa fa-phone"></i> <span style="color:white ;">+91 <%=locals.orders[0].userDetails.phoneno%></span></li>
                    </ul>
                  </div>


                  <div class="col-xl-5">
                    <p class="text-muted"></p>
                    <ul class="list-unstyled">
                      <li class="text-muted"><i class="fa fa-circle" style="color:black ;"></i> <span
                          class="fw-bold">Order ID: <span style="color:white ;"><%=locals.orders[0]._id%></span></span></li>
                      <li class="text-muted" style="color:black ;"><i class="fa fa-circle" style="color:black ;"></i> <span
                          class="fw-bold">Date: <span style="color:white ;"><%=locals.orders[0].date%></span></li>
                      <li class="text-muted"><i class="fa fa-circle" style="color:black ;"></i> <span
                          class="me-1 fw-bold">Status: <span style="color:white ;"><%=locals.orders[0].status%></span></li>
                      <li class="text-muted"><i class="fa fa-circle" style="color:black ;"></i> <span
                          class="me-1 fw-bold">Status: <span style="color:white ;"><%=locals.orders[0].paymentMethod%></span></li>
                      <li class="text-muted"><i class="fa fa-circle" style="color:black ;"></i> <span
                        class="me-1 fw-bold">Status: <span style="color:white ;"><%=locals.orders[0].paymentStatus%></span></li>
                    </ul>
                  </div>

                  <div class="col-xl-3">
                    <ul class="list-unstyled">
                      <li class="text-muted">Shipping Address:<br> <span style="color:white ;"><%=locals.orders[0].deliveryDetails.firstName%> <%=locals.orders[0].deliveryDetails.lastName%></span></li>
