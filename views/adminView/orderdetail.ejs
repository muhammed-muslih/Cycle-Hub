                    <table class="data-table table stripe hover nowrap mt-5">
                        <thead>
                          <tr>
                            <th scope="col">NUMBER</th>
                            <th scope="col">PRODUCT</th>
                            <th scope="col">QTY</th>
                            <th scope="col">UNIT PRICE</th>
                            <th scope="col">AMOUNT</th>
                            <th scope="col">IMAGES</th>
                          </tr>
                        </thead>
                        <tbody>
                          <%for(var i=0;i<orders.length;i++){%>
                            <tr>
                                <td><%=i+1%></td>
                                <td><%=orders[i].productDetails.productName%></td>
                                <td><%=orders[i].products.quantity%></td>
                                <td><%=orders[i].productDetails.price%></td>
                                <td><%=orders[i].subtotal%></td>
                                <td><img src="<%=orders[i].productDetails.images[0]%>" alt="" width="150"> </td>
                            </tr>
                        <%}%>
                        </tbody>     
                    </table>
